<h1>Add a Recipe</h1>
<form action="/index" method="post">
  <label for="recipe_name">Add Recipe</label>
  <input type="text" name="recipe_name">
  <button type="submit">Add a Recipe</button>
</form>

<% @recipes.each do |recipe| %>
<a href='/recipe/<%=recipe.id%>'><%= recipe.name %></a><br>
<% end %>
